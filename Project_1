#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	
	int a;
	cout << "Введите первое число" << endl;
	cin >> a;
	cout << "Ваше первое число: " << a << endl;
	int b;
	cout << "Введите второе число" << endl;
	cin >> b;
	cout << "Ваше второе число: " << b << endl;
	cout << "Выберите операцию: +, -, *, /, %" << endl;
	char operation;
	cin >> operation;

	double result = 1;

	if (operation == '+') {
		result = a + b;
		cout << "Результат: " << a << " + " << b << " = " << result;
	}

	else if (operation == '-') {
		result = a - b;
		cout << "Результат: " << a << " - " << b << " = " << result;
	}

	else if (operation == '*') {
		result = a * b;
		cout << "Результат: " << a << " * " << b << " = " << result;
	}

	else if (operation == '/') {
		if (b == 0) {
			cout << "Делить на ноль запрещено!!!" << endl;
			return 0;
		}
		result = a / b;
		cout << "Результат: " << a << " / " << b << " = " << result;
	}

	else if (operation == '%') {
		result = a % b;
		cout << "Результат: " << a << " % " << b << " = " << result;
	}

	int _; cin >> _;
	return 0;
	

}
